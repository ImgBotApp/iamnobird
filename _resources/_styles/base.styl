html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: #000;
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
  }
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
}
@media laptop {
  body { 
    display: grid;
    grid-auto-columns: 5%;
    grid-auto-rows: 1rem;
    justify-items: start;
    align-items: start;
  }
}
img {
  max-width: 100%;
  height: auto;
}
button {
  background: transparent;
  border: 1px solid #000;
  border-radius: 5px;
  height: 4rem;
  font-size: 1rem;
  padding: 1rem;
  cursor: pointer;
}
button:hover {
  background: #000;
  color: #fff;
  -webkit-transition: background-color 200ms ease-out;
  -o-transition: background-color 200ms ease-out;
  transition: background-color 200ms ease-out;
}

// Intro

.Intro {
  padding: 2rem;
  grid-row: 5 / 67;
}
@media laptop {
  .Intro {
    grid-row: 5/67;
  }
}
@media desktop {
  .Intro {
    grid-row: 6/67;
  }
}
.OffsetEmoji {
  position: relative;
  top: 2px;
}
.ImgContainer {
  background: #000;
  padding: 3rem;
}
@media laptop {
  .ImgContainer {
  background: #000;
  padding: 6rem;
  }
}
.IntroImgs {
  width: 100%;
  padding-bottom: 100%;
  background-size: 100%;
  transition: transform 200ms ease-out;
  cursor: pointer;
}
.IntroImgs:hover {
  transform: scale(1.03);
}
@media laptop {
  .IntroImg {
  display: none;
  }
}
